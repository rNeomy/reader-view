{
  "name": "Reader View",
  "short_name": "reader-view",
  "description": "Strips away clutter like buttons, background images, and changes the page's text size, contrast and layout for better readability",
  "author": "Richard Neomy",
  "version": "0.3.9",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "notifications",
    "declarativeContent",
    "chrome://favicon/",
    "https://text-to-speech-demo.ng.bluemix.net/api/*"
  ],
  "optional_permissions": [
    "*://*/*",
    "webNavigation"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "config.js",
      "common.js"
    ]
  },
  "page_action": {
    "browser_style": true
  },
  "homepage_url": "https://add0n.com/chrome-reader-view.html",
  "icons": {
    "16": "data/icons/16.png",
    "19": "data/icons/19.png",
    "32": "data/icons/32.png",
    "38": "data/icons/38.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png",
    "512": "data/icons/512.png"
  },
  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true,
    "open_in_tab": true
  },
  "incognito": "split",
  "commands": {
    "toggle-reader-view": {
      "description": "Toggle the Reader View"
    }
  },
  "web_accessible_resources": [
    "/data/reader/template.html"
  ]
}
